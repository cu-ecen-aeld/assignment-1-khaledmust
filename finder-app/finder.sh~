#!/bin/bash

# Checks if the arguments are provided.
if ["$#" -ne 2]; then
    echo "No or incorrect number of arguments supplied"
    exit 1
fi

# Assign the arguments to variables.
directory = "$1"
search_string = "$2"

# Check if the directory exists
if [ ! -d "directory"]; then
    echo "$directory is not a director or doesn't exist"
fi

